{
    "python.pythonPath": "temporal_venv/bin/python3",
    "python.unitTest.unittestEnabled": false,
    "python.unitTest.nosetestsEnabled": false,
    "python.unitTest.pyTestEnabled": true,
    "python.unitTest.pyTestArgs": [
        "-s",
        "-v",
    ],
    "python.jediEnabled": false,
    "python.linting.flake8Enabled": true,
    "autoDocstring.docstringFormat": "sphinx",
    "autoDocstring.includeDescription": true,
    "workbench.list.horizontalScrolling": true,
    "workbench.tree.indent": 20,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "python.formatting.autopep8Args": [
        "--max-line-length=200"
    ],
    "python.formatting.autopep8Args": [
        "--ignore",
        "E402"
    ],
    "python.linting.pep8Args": [
        "--max-line-length=200",
    ],
    "python.linting.flake8Args": [
        "--ignore=E501"
    ],
    // "python.linting.pylintEnabled": true
    "fileHeaderComment.parameter": {
        "*": {
            "name": "Alexander Kell",
            "company": "Newcastle University",
            "license": "MIT",
            "email": "alexander@kell.es"
        }
    },
    "fileHeaderComment.template": {
        "*": [
            "${commentbegin}",
            "${commentprefix} Description: .",
            "${commentprefix} Created on ${date}",
            "${commentprefix}",
            "${commentprefix} Copyright (c) ${year} ${company}",
            "${commentprefix} License is MIT",
            "${commentprefix} Email is ${email}",
            "${commentend}"
        ]
    }
}