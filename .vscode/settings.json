{
    // "python.pythonPath": "temporal_venv/bin/python3",
    "python.pythonPath": "/Users/b1017579/Documents/PhD/Projects/14-temporal-granularity/temporal_granularity/temporal_venv/bin/python3",
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "-s",
        "-v",
    ],
    "code-runner.executorMap": {
        "python": "$pythonPath -u $fullFileName",
    },
    "python.jediEnabled": false,
    "python.linting.flake8Enabled": true,
    "autoDocstring.docstringFormat": "sphinx",
    "autoDocstring.includeDescription": true,
    "workbench.list.horizontalScrolling": true,
    "workbench.tree.indent": 20,
    "python.formatting.provider": "autopep8",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "python.formatting.autopep8Args": [
        "--max-line-length=500"
    ],
    "python.formatting.autopep8Args": [
        "--ignore E402",
        "--ignore=E501",
    ],
    "python.linting.pep8Args": [
        "--max-line-length=200",
        "--ignore=E501",
        "--ignore=E402"
    ],
    "python.linting.flake8Args": [
        "--ignore=E402",
        "--ignore=E501"
    ],
    // "python.linting.pylintEnabled": true
    "fileHeaderComment.parameter": {
        "*": {
            "name": "Alexander Kell",
            "company": "Newcastle University",
            "license": "MIT",
            "email": "alexander@kell.es"
        }
    },
    "fileHeaderComment.template": {
        "*": [
            "${commentbegin}",
            "${commentprefix} Description: .",
            "${commentprefix} Created on ${date}",
            "${commentprefix}",
            "${commentprefix} Copyright (c) ${year} ${company}",
            "${commentprefix} License is MIT",
            "${commentprefix} Email is ${email}",
            "${commentend}"
        ]
    },
    "macros": {
        "commentLine": [
            "editor.action.commentLine",
            "cursorDown"
        ]
    }
}